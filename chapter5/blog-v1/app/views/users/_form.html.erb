<%= form_for @user, url: profile_path, method: :patch, :html => { :class => "form-horizontal user" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


    <%= f.hidden_field :id %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    </div>
    <%= error_span(@user[:name]) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <div class="col-sm-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    </div>
    <%= error_span(@user[:email]) %>
  </div>
  <div class="form-group">
    <%= f.label :password, :class => 'col-sm-2 control-label' %>
    <div class="controls">
      <div class="col-sm-10">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    </div>
    <%= error_span(@user[:password]) %>
  </div>

    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Update", :class => 'btn btn-success' %>
    </div>
    </div>

<% end %>
